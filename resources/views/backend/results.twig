{% extends 'backend/layouts/app.twig' %}

{% block styles %}
 <link rel="stylesheet" type="text/css" href="{{ base_url() }}/backend/assets/plugins/datatables/datatables.min.css"/>
{% endblock %}

{% block content %}

    <!-- [ Main Content ] start -->
    <div class="pcoded-main-container">
        <div class="pcoded-wrapper">
            <div class="pcoded-content">


                                    <div class="card Recent-Users">
                                        <div class="card-header">
                                            <h5>Votes Results</h5>
                                        </div>
                                        <div class="card-block px-3 py-3">
                                            <div class="table-responsive">
                                                <table class="table table-hover" id="myTable">
                                                  <thead>
                                                    <tr>
                                                     <th>Voter Name</th>
                                                     <th>DNI</th>
                                                     <th>DOB</th>
                                                     <th>Time</th>
                                                     <th>Signature</th>
                                                     <th>Candidate Selected</th>
                                                    </tr>
                                                  </thead>
                                                    <tbody>

                                                    {% for vote in votes %}
                                                        <tr class="unread">
                                                            <td>
                                                                <h6 class="mb-1">{{ vote.name }}</h6>
                                                            </td>
                                                            <td>
                                                                <h6 class="mb-1">{{ vote.dni }}</h6>
                                                            </td>
                                                            <td>
                                                                <h6 class="text-muted">{{ vote.dob }}</h6>
                                                            </td>
                                                            <td>
                                                                <h6 class="text-muted">{{ vote.created_at }}</h6>
                                                            </td>
                                                            <td>
                                                                {% if vote.signature %}
                                                                <img src="{{ base_url() }}/uploads/signatures/{{ vote.signature }}" style="max-height: 50px; max-width: 100px;">
                                                                {% else %}
                                                                <span class="text-muted">No Signature</span>
                                                                {% endif %}
                                                            </td>
                                                            <td>
                                                                <h6 class="mb-1">{{ vote.nominee_name }}</h6>
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                    </tbody>
                                                  <thead>
                                                    <tr>
                                                     <th>Voter Name</th>
                                                     <th>DNI</th>
                                                     <th>DOB</th>
                                                     <th>Time</th>
                                                     <th>Signature</th>
                                                     <th>Candidate Selected</th>
                                                    </tr>
                                                  </thead>
                                                </table>
                                            </div>
                                        </div>
                                    </div>



            </div>
        </div>
    </div>
    <!-- [ Main Content ] end -->

{% endblock %}

{% block scripts %}

  <script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>
  <script type="text/javascript" src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
  <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.6.5/js/dataTables.buttons.min.js"></script>
  <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.6.5/js/buttons.flash.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
  <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.6.5/js/buttons.html5.min.js"></script>
  <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.6.5/js/buttons.print.min.js"></script>
  <script>
  $(document).ready( function () {
    $('#myTable').DataTable({
          "ordering": false,
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
    });
  } );

  </script>


        {% if flash.getMessage('success') %}
          <script>
           $(document).ready(function(){
              swal("Success!", "{{ flash.getMessage('success') | first }}", "success");
           });
          </script>
        {% endif %}

        {% if flash.getMessage('warning') %}
          <script>
           $(document).ready(function(){
              swal("Warning!", "{{ flash.getMessage('warning') | first }}", "warning");
           });
          </script>
        {% endif %}

        {% if flash.getMessage('error') %}
          <script>
           $(document).ready(function(){
              swal("Error!", "{{ flash.getMessage('error') | first }}", "error");
           });
          </script>
        {% endif %}

{% endblock %} 